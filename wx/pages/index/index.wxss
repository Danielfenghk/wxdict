.progress-wrap {
		padding: 0 32rpx;
		height: 30px;
		line-height: 30px;
		justify-content: center;
}
.begin, .end {
		width: 100rpx;
			color: #ccc;
			font-size: 24rpx;
		}

  .end {
			text-align: right;
		}
.progress {
		position: relative;
			width: 500rpx;
		}
  .progress	.progress-bg {
			position: absolute;
				left: 50%;
				top: 50%;
				margin-top: -2px;
				margin-left: -250rpx;
				width: 500rpx;
				height: 4px;
				background: #999;
				border-radius: 4px;
			}
	.progress-bar {
				position: absolute;
				left: -2rpx;
				top: 50%;
				margin-top: -2px;
				width: 0;
				height: 4px;
				background: #eee;
				border-radius: 4px;
			
			}
		.progress .progress-bar .control {
					position: absolute;
					right: -8px;
					top: -6px;
					float: right;
					width: 16px;
					height: 16px;
					background: #eee;
					border-radius: 50%;
				}

